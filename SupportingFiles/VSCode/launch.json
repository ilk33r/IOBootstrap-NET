{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SevenKApplication",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildApplication",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/SevenK/Application/bin/Debug/netcoreapp3.1/SevenKApplication.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SevenK/Application",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"                
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "ForgotPasswordBatch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildForgotPasswordBatch",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/SevenK/ForgotPasswordBatch/bin/Debug/netcoreapp3.1/SevenKForgotPasswordBatch.dll",
            "args": ["dev", "${workspaceFolder}/SevenK/Application"],
            "cwd": "${workspaceFolder}/SevenK/ForgotPasswordBatch",
            "stopAtEntry": false,
            "requireExactSource": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "SevenKApplicationPublish",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "publish",
            "program": "${workspaceFolder}/SevenK/Application/bin/Debug/netcoreapp3.1/SevenKApplication.dll",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Release",
                "ASPNETCORE_URLS": "http://localhost:5000"
            }
        }
    ]
}